<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="skillJava" class="java.lang.String">
        <constructor-arg value="Java"/>
    </bean>
    <bean id="skillAngular" class="java.lang.String">
        <constructor-arg value="Angular"/>
    </bean>

    <bean id="departmentIT" class="com.cognizant.employee_service.model.Department">
        <constructor-arg value="10"/>
        <constructor-arg value="IT"/>
    </bean>
    <bean id="departmentFinance" class="com.cognizant.employee_service.model.Department">
        <constructor-arg value="20"/>
        <constructor-arg value="Finance"/>
    </bean>

    <bean id="employeeA" class="com.cognizant.employee_service.model.Employee">
        <constructor-arg value="1001"/>
        <constructor-arg value="Alice Walker"/>
        <constructor-arg ref="departmentIT"/>
        <constructor-arg>
            <list>
                <ref bean="skillJava"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="employeeB" class="com.cognizant.employee_service.model.Employee">
        <constructor-arg value="1002"/>
        <constructor-arg value="Bob Johnson"/>
        <constructor-arg ref="departmentFinance"/>
        <constructor-arg>
            <list>
                <ref bean="skillAngular"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="employeeC" class="com.cognizant.employee_service.model.Employee">
        <constructor-arg value="1003"/>
        <constructor-arg value="Carol Smith"/>
        <constructor-arg ref="departmentIT"/>
        <constructor-arg>
            <list>
                <ref bean="skillJava"/>
                <ref bean="skillAngular"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="employeeD" class="com.cognizant.employee_service.model.Employee">
        <constructor-arg value="1004"/>
        <constructor-arg value="David Lee"/>
        <constructor-arg ref="departmentFinance"/>
        <constructor-arg>
            <list>
                <ref bean="skillJava"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="employeeList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="employeeA"/>
                <ref bean="employeeB"/>
                <ref bean="employeeC"/>
                <ref bean="employeeD"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
